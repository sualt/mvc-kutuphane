@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>YAZAR</h2>
<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>AD</td>
        <td>SOYAD</td>
        <td>DETAY</td>
        <td>SİL</td>
        <td>GÜNCELLE</td>
    </tr>
    @foreach(var y in Model)
            {
                <tr>
                    <td>@y.ID</td>
                    <td>@y.AD</td>
                    <td>@y.SOYAD</td>
                    <td>@y.DETAY</td>
                    <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinize emin misiniz')" })
                    </td>
                    <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>