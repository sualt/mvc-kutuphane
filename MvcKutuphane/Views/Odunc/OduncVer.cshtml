@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>OduncVer</h2>
<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Uye ID</label>
        @Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Kitap Alıs Tarihi</label>
        <input type="text" class="form-control" name="ALISTARİH" value="@DateTime.Now.ToShortDateString()"/>

    </div>
    <div style="margin-top:15px">
        <label>Kitap Veris Tarihi</label>
       <input type="text" class="form-control" name="İADETARİH" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>

    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" style="background-color:#852828">Kitabı Ödünç Ver</button>
    </div>
</form>

