@model MvcKutuphane.Models.Entity.TBLKITAP

@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KitapGüncelle","Kitap",FormMethod.Post))
            {
<div style="margin-bottom:15px"></div>
<div class="form-group">
    <div style="margin-bottom:15px">
        <label>Kitap ID</label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        <label>Kitap ADI</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        <label>Kategori</label>
        @Html.DropDownListFor(k => k.TBLKATEGORI.ID,(List<SelectListItem>)ViewBag.dgr1, new { @class = "form-contol" })
    </div>
    <div style="margin-bottom:15px">
        <label>Yazar</label>
        @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        <label>BasımYılı</label>
        @Html.TextAreaFor(k => k.BASIMYIL, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        <label>Yayınevi</label>
        @Html.TextAreaFor(k => k.YAYINEVİ, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        <label>Sayfa Sayısı</label>
        @Html.TextAreaFor(k => k.SAYFASAYISI, new { @class = "form-control" })
    </div>

    <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
</div>
            }
