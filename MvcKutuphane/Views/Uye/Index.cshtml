@using MvcKutuphane.Models.Entity
@model List<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>UYELER</h2>
<table class="table table-bordered">
    <tr>
        <td>ÜYE ID</td>
        <td>ÜYE AD</td>
        <td>ÜYE SOYAD</td>
        <td>MAİL</td>
        <td>KULLANICI ADI</td>
        <td>ŞİFESİ</td>
        <td>TELEFON</td>
        <td>OKUL</td>
        <td>SİL</td>
        <td>GÜNCELLE</td>
    </tr>
    @foreach (var uye in Model)
    {
        <tr>
            <td>@uye.ID</td>
            <td>@uye.AD</td>
            <td>@uye.SOYAD</td>
            <td>@uye.MAİL</td>
            <td>@uye.KULLANICIADI</td>
            <td>@uye.SIFRE</td>
            <td>@uye.TELEFON</td>
            <td>@uye.OKUL</td>
            <td><a href="/Uye/UyeSil/@uye.ID" class="btn btn-success">Sil</a> </td>
            <td><a href="/Uye/UyeGetir/@uye.ID" class="btn btn-success">Güncelle</a></td>
    </tr>
}
</table>
<a class="btn btn-primary" href="/Uye/UyeEkle/">Yeni Üye Ekle</a>

